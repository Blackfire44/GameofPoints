<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/levelauswahl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/Planetenauswahl" />

            <ImageView
                android:id="@+id/zuruekLevel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/picture"
                android:src="@android:drawable/ic_delete" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/Platzhalter"
            android:layout_weight="1" />

        <HorizontalScrollView
            android:id="@+id/scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">


            <LinearLayout
                android:id="@+id/Level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:gravity="bottom"
                android:orientation="horizontal">


                <!-- Von hier aus die n채chsten Level kopieren-->

                <LinearLayout
                    android:id="@+id/Level1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/level1name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="40dp"
                        android:text="@string/Level1" />

                    <ImageView
                        android:id="@+id/rotate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rotate_1" />

                    <!--  <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageview_animation_selector"
                        android:background="@drawable/selector"/>
-->
                    <!-- Das Auskommentierte ist das Standart. DAs andere ist ein Test!
                    <ImageView
                        android:id="@+id/imageView0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/trius1" /> -->
                </LinearLayout>

                <!-- bis hier. Dann: LayoutId 채ndern, text 채ndern, src des Bildes 채ndern-->

                <LinearLayout
                    android:id="@+id/Level2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/level2name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="40dp"
                        android:text="@string/Level2" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/picture"
                        android:src="@drawable/quatron1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Level3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/planet3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="40dp"
                        android:text="@string/Level3" />

                    <ImageView
                        android:id="@+id/level3name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/p3b1" />
                </LinearLayout>

            </LinearLayout>


        </HorizontalScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>