<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dip" />
            <gradient
                android:startColor="@color/startback1"
                android:endColor="@color/startback2"
                />
        </shape>
    </item>

    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="8dip" />
                <gradient
                    android:startColor="@color/start1"
                    android:endColor="@color/start2"
                    />
            </shape>
        </clip>
    </item>

</layer-list>
