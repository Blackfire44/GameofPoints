<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/on"
        android:state_activated="true">
        <bitmap
            android:src="@drawable/sonne0"/>
    </item>

    <item
        android:id="@+id/off">
        <bitmap
            android:src="@drawable/sonne34"/>
    </item>

    <transition
        android:fromId="@+id/on"
        android:toId="@+id/off"
        android:drawable="@drawable/rotate_7">
    </transition>
</animated-selector>